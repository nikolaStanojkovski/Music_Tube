@model MusicTube.Domain.DTO.AlbumDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Create Album - Music Tube</title>

    <!--    JQuery Import   -->
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <!--    Bootstrap CSS Import   -->
    <link rel="stylesheet" href="~/custom/css/bootstrap.css" />

    <!--    Font Awesome CSS Import   -->
    <link rel="stylesheet" href="~/custom/fontawesome/css/all.css">

    <!--    Bootstrap JS Imports   -->
    <script src="~/custom/js/bootstrap.js"></script>
</head>

<h1 class="text-center mt-5">Create Album</h1>
<br />
<div class="row mb-5">
    <div class="col-md-12">
        <form asp-controller="Albums" asp-action="Create" method="post">
            <input type="hidden" asp-for="PremiumUserId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-12">
                <label asp-for="AlbumName" class="control-label"></label>
                <input asp-for="AlbumName" class="form-control" />
                <span asp-validation-for="AlbumName" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="AlbumCoverArt" class="control-label"></label>
                <input asp-for="AlbumCoverArt" class="form-control" />
                <span asp-validation-for="AlbumCoverArt" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="AlbumArranger" class="control-label"></label>
                <input asp-for="AlbumArranger" class="form-control" />
                <span asp-validation-for="AlbumArranger" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="AlbumComposer" class="control-label"></label>
                <input asp-for="AlbumComposer" rows="5" class="form-control" />
                <span asp-validation-for="AlbumComposer" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="AlbumProducer" class="control-label"></label>
                <input asp-for="AlbumProducer" rows="5" class="form-control" />
                <span asp-validation-for="AlbumProducer" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="AlbumMixMasterEngineer" class="control-label"></label>
                <input asp-for="AlbumMixMasterEngineer" rows="5" class="form-control" /5>
                <span asp-validation-for="AlbumMixMasterEngineer" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="AlbumGenre" class="control-label"></label>
                <div>
                    <select class="form-control" asp-for="@Model.AlbumGenre" asp-items="Html.GetEnumSelectList<MusicTube.Domain.Enumerations.Genre>()">
                    </select>
                    @Html.ValidationMessageFor(m => m.AlbumGenre)
                </div>
            </div>

            <br />
            <br />
            <div class="form-group col-12">
                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            </div>
        </form>
        <div class="col-12 mt-4 mb-5">
            <a asp-controller="Albums" asp-action="Index" class="btn btn-outline-info btn-block">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}